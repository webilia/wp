{
    "name": "webilia/wp",
    "description": "A handy set of libraries for WordPress developments.",
    "type": "library",
    "license": "MIT",
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "Webilia\\WP\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Webilia",
            "email": "info@webilia.com"
        },
        {
            "name": "Hossein Rafiei",
            "email": "hoseinrafiei@gmail.com"
        }
    ],
    "require": {
        "jenssegers/blade": "^1.4",
        "nesbot/carbon": "^2.62"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.7",
        "szepeviktor/phpstan-wordpress": "^1.1",
        "squizlabs/php_codesniffer": "*"
    },
    "scripts": {
        "phpstan": [
            "vendor/bin/phpstan analyse -c phpstan.neon src"
        ],
        "phpcs": [
            "vendor/bin/phpcs"
        ],
        "phpcbf": [
            "vendor/bin/phpcbf"
        ]
    }
}
